<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <!--ListView의 각 항목 layout -->
    <ImageView
        android:id="@+id/item_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/item_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="asdf"
        android:layout_marginLeft="8dp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/item_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/item_des"
        app:layout_constraintStart_toEndOf="@+id/item_img"
        app:layout_constraintTop_toBottomOf="@+id/item_name"
        tools:text="asdf"
        android:layout_marginLeft="8dp" />


    <TextView
        android:id="@+id/item_dias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/item_des"
        app:layout_constraintStart_toEndOf="@+id/item_color"
        app:layout_constraintTop_toBottomOf="@+id/item_name"
        tools:text="asdf"
        android:layout_marginLeft="20dp" />


    <TextView
        android:id="@+id/item_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_img"
        app:layout_constraintStart_toEndOf="@+id/item_img"
        tools:text="asdf"
        android:layout_marginLeft="8dp" />



</androidx.constraintlayout.widget.ConstraintLayout>